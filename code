<body>
    <div class="calculator">
        <h3>Delivery Calculator</h3>
        
        <label>Calculator Type:</label>
        <select id="calculatorType">
            <option value="standard">Standard</option>
            <option value="business">Business</option>
        </select>
        <div class="description">(Choose business or standard rates)</div>

        <label>Delivery Type:</label>
        <select id="deliveryType">
            <option value="standard">Standard</option>
            <option value="express">Express</option>
        </select>
        <div class="description">(Express: within 2 hours)</div>

        <label>Future Delivery:</label>
        <select id="futureDelivery">
            <option value="no">No</option>
            <option value="yes">Yes</option>
        </select>
        <div class="description">(Minimum 3 days in advance)</div>

        <label>Distance (km):</label>
        <input type="number" id="distance" placeholder="Enter distance" min="0" />
        
        <button onclick="calculateCost()">Check Price</button>
        
        <div class="result" id="result"></div>

        <div class="branding">Steinbach Express Courier</div>
    </div>

    <script>
        function calculateCost() {
            const distance = parseFloat(document.getElementById('distance').value);
            const calculatorType = document.getElementById('calculatorType').value;
            const deliveryType = document.getElementById('deliveryType').value;
            const futureDelivery = document.getElementById('futureDelivery').value;

            if (isNaN(distance) || distance < 0) {
                document.getElementById('result').innerHTML = "Please enter a valid distance.";
                return;
            }

            let baseFee = 0;
            let perKmFee = 0;

            if (calculatorType === 'business') {
                baseFee = 8.99;
                perKmFee = 0.06;
            } else {
                if (distance <= 10) {
                    baseFee = (deliveryType === 'express') ? 5.99 : 2.99;
                    perKmFee = 0;
                } else if (distance <= 40) {
                    baseFee = (deliveryType === 'express') ? 10.99 : 5.99;
                    perKmFee = 0.11;
                } else if (distance <= 70) {
                    baseFee = (deliveryType === 'express') ? 16.99 : 8.99;
                    perKmFee = 0.11;
                } else if (distance <= 150) {
                    baseFee = (deliveryType === 'express') ? 16.99 : 8.99;
                    perKmFee = 0.22;
                } else {
                    document.getElementById('result').innerHTML = "Distance out of range.";
                    return;
                }
            }

            let cost = baseFee + (distance * perKmFee);

            if (futureDelivery === 'yes') {
                cost *= 0.9;
            }

            document.getElementById('result').innerHTML = `Estimated Cost: $${cost.toFixed(2)}`;
        }
    </script>
